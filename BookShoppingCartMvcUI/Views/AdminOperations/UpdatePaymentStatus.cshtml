@model UpdateOrderStatusModel
@{

}

<h2>Update payment status</h2>
<a class="my-2 btn btn-primary" asp-action="AllOrders">Back</a>

<form style="width: 50%;" asp-action="UpdatePaymentStatus" class="pt-2">

     <input type="hidden" asp-for="OrderId"/>
     
     <div class="mb-2">
     <label>Payment method</label>
      <select class="form-control" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList">
          <option value="">Select payment method</option>
      </select>
     <span class="text-danger" asp-validation-for="OrderStatusId"></span>
     </div>
     <button type="submit" class="btn btn-primary">Update</button>

   @if (TempData["msg"] != null)
   {
      <div class="text-info my-2">
         @TempData["msg"]
     </div>
   }
</form>